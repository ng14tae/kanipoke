<div class="max-w-4xl mx-auto px-6 py-8">
    <div class="bg-white rounded-lg shadow-md p-6 mb-6">
        <div class="flex justify-center items-center mb-4">
        <h1 style="font-size: clamp(1.5rem, 4vw, 1.75rem); font-weight: bold; margin-bottom: 1.5rem;">
            <%= @user.name %>のマイページ</h1>
        </div>
        <div class="flex justify-center items-center mb-4">
        <%= link_to "プロフィール編集", edit_user_path(@user),
            class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded",
            style: "text-decoration: underline;"%>
        </div>

    <!-- 最近の対戦履歴 -->
    <div class="bg-white rounded-lg shadow-md p-6">
        <div class="bg-gray-100 p-4 rounded-lg text-center">
        <h2 class="text-2xl font-bold text-white mb-4 font-dotgothic">最近の対戦履歴（準備中）</h2>

        <% if false %>
        <% if @battles.any? %>
        <div class="space-y-4">
            <% @battles.each do |battle| %>
            <div class="border rounded-lg p-4 <%= battle.winner_id == @user.id ? 'bg-green-50 border-green-200' : 'bg-red-50 border-red-200' %>">
                <div class="flex justify-between items-center">
                <div class="flex items-center space-x-4">
                    <div class="text-sm text-gray-600">
                    <%= battle.created_at.strftime("%Y/%m/%d %H:%M") %>
                    </div>
                    <div class="flex items-center space-x-2">
                    <span class="font-semibold">
                        <%= battle.user_id == @user.id ? @user.name : User.find(battle.user_id).name %>
                    </span>
                    <span class="text-xs bg-gray-200 px-2 py-1 rounded">
                        <%= battle.user_card %>
                    </span>
                    <span class="text-gray-500">vs</span>
                    <span class="font-semibold">
                        <%= battle.opponent_id == @user.id ? @user.name : User.find(battle.opponent_id).name %>
                    </span>
                    <span class="text-xs bg-gray-200 px-2 py-1 rounded">
                        <%= battle.opponent_card %>
                    </span>
                    </div>
                </div>
                <div class="text-right">
                    <span class="px-3 py-1 rounded-full text-sm font-medium
                    <%= battle.winner_id == @user.id ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                    <%= battle.winner_id == @user.id ? '勝利' : '敗北' %>
                    </span>
                </div>
                </div>
            </div>
            <% end %>
        </div>
        <% else %>
        <p class="text-gray-500 text-center py-8">まだ対戦履歴がありません</p>
        <% end %>
        <% end %>
    </div>
</div>