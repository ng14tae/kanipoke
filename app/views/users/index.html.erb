<div class="min-h-screen py-12 px-6">
  <div class="container mx-auto max-w-4xl px-4 sm:px-8">
    <!-- 自分の戦歴 -->
      <div class="mb-8">
        <h2 class="text-2xl sm:text-3xl font-bold mb-4 text-center md:text-left">
          <%= current_user.display_name %>の戦歴
        </h2>

        <!-- デスクトップ用戦歴 -->
        <div class="hidden md:block">
          <p class="text-base sm:text-lg text-gray-200">
            総戦闘数: <%= @my_total_battles %>回 ／ 
            勝ち: <%= @my_win_count %>回 ／ 
            負け: <%= @my_lose_count %>回
            <% if @my_total_battles > 0 %>
              ／ 勝率: <%= (@my_win_count.to_f / @my_total_battles * 100).round(1) %>%
            <% end %>
          </p>
        </div>

        <!-- モバイル用戦歴 -->
        <div class="md:hidden text-center space-y-1">
          <p class="text-sm text-gray-200">総戦闘数: <%= @my_total_battles %>回</p>
          <p class="text-sm text-gray-200">勝ち: <%= @my_win_count %>回 ／ 負け: <%= @my_lose_count %>回</p>
          <% if @my_total_battles > 0 %>
            <p class="text-sm text-gray-200">
              勝率: <%= (@my_win_count.to_f / @my_total_battles * 100).round(1) %>%
            </p>
          <% end %>
        </div>
      </div>

    <!-- ソート切り替えボタン -->
    <div class="text-center mb-8">
      <div class="w-full max-w-2xl mx-auto">
        <div class="flex border-b-2 border-white border-opacity-20">
          <%= link_to "登録順", users_path,
              class: "flex-1 text-center px-6 py-4 font-semibold transition-all duration-200 #{params[:sort].blank? ? 'bg-white bg-opacity-20 text-yellow-300 border-b-4 border-yellow-400' : 'text-gray-300 hover:text-white hover:bg-white hover:bg-opacity-10'}" %>
          <%= link_to "エキスパート", users_path(sort: 'experienced_ranking'),
              class: "flex-1 text-center px-6 py-4 font-semibold transition-all duration-200 #{params[:sort] == 'experienced_ranking' ? 'bg-white bg-opacity-20 text-yellow-300 border-b-4 border-yellow-400' : 'text-gray-300 hover:text-white hover:bg-white hover:bg-opacity-10'}" %>
        </div>
      </div>
    </div>

    <!-- プレイヤー一覧 -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6">
      <% @users.each_with_index do |user, index| %>
        <div class="<%= user_card_classes %>">
          <!-- ランキング表示 -->
          <% if params[:sort] == 'win_rate' %>
            <div class="text-center mb-4">
              <div class="text-xl font-bold text-yellow-400">
                <%= ranking_badge(index) %>
              </div>
            </div>
          <% end %>

          <!-- プレイヤー名 -->
          <p class="text-xl sm:text-2xl font-bold mb-6 text-center">
            <%= user.display_name %>
          </p>

          <!-- 戦歴 -->
          <div class="mb-6 text-center">
            <p class="text-base sm:text-lg mb-3">
              戦歴: 
              勝ち <span class="font-bold"><%= user.won_battles.count %></span>回
              負け <span class="font-bold"><%= user.lost_battles.count %></span>回
            </p>

            <% total_battles = user.won_battles.count + user.lost_battles.count %>
            <% if total_battles > 0 %>
              <p class="text-lg sm:text-xl font-semibold text-yellow-400">
                勝率: <%= user.win_rate %>%
              </p>
            <% else %>
              <p class="text-base text-gray-400">未対戦</p>
            <% end %>
          </div>

          <!-- 対戦ボタン -->
          <div class="text-center mt-6">
            <%= link_to "対戦する", new_battle_path(opponent_id: user.id),
                class: button_classes(type: :primary) %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- ページネーション -->
    <% if defined?(Kaminari) && @users.respond_to?(:current_page) %>
      <div class="text-center mt-12">
        <div class="inline-block bg-white bg-opacity-10 p-4 rounded-xl border-2 border-yellow-300 border-opacity-50">
          <%= paginate @users %>
        </div>
      </div>
    <% end %>
  </div>
</div>