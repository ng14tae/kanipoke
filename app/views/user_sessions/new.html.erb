<div class="container mx-auto px-4">
<div class="flex justify-center">
    <div class="w-full max-w-md lg:max-w-lg">
    <h1 class="text-2xl font-bold text-gray-900 mb-6">ログイン</h1>
    <%= form_with url: login_path, class: "space-y-4" do |f| %>
        <div>
        <%= f.label :first_name, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :first_name, placeholder: "例：進撃", class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>
        <p class="text-gray-600">の</p>
        <div>
        <%= f.label :last_name, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :last_name, placeholder: "例：巨人", class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>
        <div>
        <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>
        <%= f.submit "ログイン", class: "w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition duration-200" %>
    <% end %>
    <div class="text-center mt-6 space-y-2">
        <%= link_to '登録ページへ', new_user_path, class: "block text-blue-600 hover:text-blue-800 underline" %>
    </div>
    </div>
</div>
</div>