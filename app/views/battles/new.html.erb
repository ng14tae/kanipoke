<div id="battle-arena">
  <div class="player-area">
    <h3><%= current_user.display_name %></h3>
    <div id="player-card" style="display: none;"></div>
  </div>

  <p>vs</p>

  <div class="opponent-area">
    <h3><%= @opponent.display_name %></h3>
    <div id="opponent-card" style="display: none;"></div>
  </div>

  <%= form_with model: @battle, local: true do |form| %>
  <%= form.hidden_field :opponent_id, value: @opponent.id %>
  <%= form.submit "勝負！", id: "start-battle" %>
  <% end %>
</div>