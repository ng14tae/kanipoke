<% flash.each do |type, message| %>
    <% css_class =
        case type.to_sym
        when :notice, :success then "bg-green-500"
        when :alert,  :danger  then "bg-red-500"
        else "bg-gray-500"
        end
    %>

    <div class="<%= css_class %> text-white p-4 text-center">
        <%= message %>
    </div>
<% end %>
